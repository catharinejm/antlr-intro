#!/usr/bin/env bash

set -e

function antlr {
    case "$1" in
        generate)
            java org.antlr.Tool src/java/antlr_intro/grammars/Expr.g
            ;;
        compile)
            find src/java -name \*.java -exec javac -d parslex {} \+
            ;;
        clean)
            rm -rf parslex/*
            ;;
        *)
            print-usage
            ;;
    esac
}

function print-usage {
    echo "Usage: $0 (generate|compile|clean)+"
    exit 1
}

if [[ -z "$1" ]]; then
    print-usage
fi

export CLASSPATH=`find lib -name \*.jar -exec echo -n {}: \;`

for cmd in "$@"; do
    antlr "$cmd"
done
